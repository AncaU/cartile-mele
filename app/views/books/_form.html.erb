<%= form_for @book, :html => { :class => "form-horizontal book" } do |f| %>

  <% if @book.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :price, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :price, :class => 'form-control' %>
    </div>
    <%=f.error_span(:price) %>
  </div>
  <div class="form-group">
    <%= f.label :domain_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :domain_id, Domain.all.map{|a| [a.display_name, a.id]}, {include_blank: true} %>
    </div>
    <%=f.error_span(:domain_id) %>
  </div>
  <div class="form-group">
    <%= f.label :active, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      Da <%= f.radio_button :active, true , id: :active_sau_ba, checked: true%>
      Nu <%= f.radio_button :active, false , id: :active_sau_ba %>
    </div>
    <%=f.error_span(:active) %>
  </div>
  <div class="form-group">
    <%= f.label :state_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :state_id, State.all.map{|a| [a.display_name, a.id]}, {include_blank: true} %>
    </div>
    <%=f.error_span(:state_id) %>
  </div>
  <div class="form-group">
    <%= f.label :book_type_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :book_type_id, BookType.all.map{|a| [a.display_name, a.id]}, {include_blank: true} %>
    </div>
    <%=f.error_span(:book_type_id) %>
  </div>
  <div class="form-group">
    <%= f.label :language_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :language_id, Language.ordered.map{|a| [a.display_name, a.id]}, {include_blank: true} %>
    </div>
    <%=f.error_span(:language_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                books_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
