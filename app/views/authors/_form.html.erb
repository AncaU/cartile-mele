<%= form_for @author, :html => { :class => "form-horizontal author" } do |f| %>

  <% if @author.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@author.errors.count, "error") %> prohibited this author from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @author.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :first_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:first_name) %>
  </div>
  <div class="form-group">
    <%= f.label :last_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :last_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:last_name) %>
  </div>
  <div class="form-group">
    <%= f.label :ethnic_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :ethnic_id, Ethnic.all.map{|a| [a.display_name, a.id]}, {include_blank: true} %>
    </div>
    <%=f.error_span(:ethnic_id) %>
  </div>
  <div class="form-group">
    <%= f.label :birth_year, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :birth_year, :class => 'form-control' %>
    </div>
    <%=f.error_span(:birth_year) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                authors_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
